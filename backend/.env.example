EMAIL_API_BASE_URL=https://email-verification.islamsaka.com/api/v1/
DEV_API_KEYS=

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=service-role-key
SUPABASE_JWT_SECRET=jwt-secret
SUPABASE_ANON_KEY=anon-key
SUPABASE_AUTH_COOKIE_NAME=sb-your-project-auth-token

DATABASE_URL=postgresql://user:password@host:5432/postgres

NEXT_PUBLIC_API_BASE_URL=http://localhost:8001/api
BACKEND_CORS_ORIGINS=http://localhost:3000,https://boltroute.ai,https://www.boltroute.ai

LOG_LEVEL=info
APP_ENV=local

UPLOAD_MAX_MB=10
UPLOAD_RETENTION_DAYS=180
UPLOAD_RETENTION_WHEN_CREDITS=non_zero
UPLOAD_POLL_ATTEMPTS=3
UPLOAD_POLL_INTERVAL_SECONDS=2.0
UPLOAD_POLL_PAGE_SIZE=20

USAGE_RETENTION_DAYS=180

# Paddle billing address mode
PADDLE_ADDRESS_MODE=checkout

# Paddle Billing webhook signature verification
PADDLE_WEBHOOK_MAX_VARIANCE_SECONDS=5

# Paddle webhook client IP resolution (set explicitly)
PADDLE_WEBHOOK_TRUST_PROXY=false
PADDLE_WEBHOOK_FORWARDED_HEADER=X-Forwarded-For
PADDLE_WEBHOOK_FORWARDED_FORMAT=x_forwarded_for
PADDLE_WEBHOOK_PROXY_HOPS=1
